@model IEnumerable<PurchaseReqV3.Models.PurchaseRequisition>
<div style="background-color: gainsboro; opacity: 0.9">
    @{
        ViewBag.Title = "Index";
    }

    <style>
        tr:nth-child(even) {
            background-color: gainsboro;
        }

        tr:nth-child(odd) {
            background-color: lightsteelblue;
        }
    </style>

    <h1 style="color: gainsboro">Purchase Requests</h1>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Budgets.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Justification)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Budgets.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Justification)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    <h4>@Html.ActionLink("Create New", "Create")</h4>
    <input type="button" value="Create items to purchase" onclick='window.location = "@Url.Action("Create", "Items")";' />
    </div>