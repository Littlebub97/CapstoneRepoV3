@model IEnumerable<PurchaseReqV3.Models.UserBudgetCode>

@{
    ViewBag.Title = "Index";
}

<style>
    tr:nth-child(even) {
        background-color: gainsboro;
    }

    tr:nth-child(odd) {
        background-color: lightsteelblue;
    }
</style>

<h1>Employee Budgets</h1>

@if (!User.IsInRole("State Auditor"))
{
<p>
    <h4>@Html.ActionLink("Create New", "Create")</h4>
</p>
}
<table class="table">
    <tr>
        <th>
            <h4><b>Budget</b></h4>
        </th>
        <th>
            <h4><b>Employee</b></h4>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Budget.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        @if (!User.IsInRole("State Auditor"))
        {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
        }
    </tr>
}

</table>
