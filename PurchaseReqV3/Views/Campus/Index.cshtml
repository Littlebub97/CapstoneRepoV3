@model IEnumerable<PurchaseReqV3.Models.Campus>
<div style="background-color: gainsboro; opacity: 0.9">
    @{
        ViewBag.Title = "Index";
    }

    <style>
        tr:nth-child(even) {
            background-color: gainsboro;
        }

        tr:nth-child(odd) {
            background-color: lightsteelblue;
        }
    </style>

    <h1>Campuses in Purchase Requisition</h1>

    <p>
        <h4>@Html.ActionLink("Create New", "Create")</h4>
    </p>
    <table class="table">
        <tr>
            <th>
                <h4><b>@Html.DisplayNameFor(model => model.Address.Country)</b></h4>
            </th>
            <th>
                <h4><b>@Html.DisplayNameFor(model => model.Address.City)</b></h4>
            </th>
            <th>
                <h4><b>@Html.DisplayNameFor(model => model.Address.State)</b></h4>
            </th>
            <th>
                <h4><b>@Html.DisplayNameFor(model => model.Address.Street)</b></h4>
            </th>
            <th>
                <h4><b>@Html.DisplayNameFor(model => model.Address.ZipCode)</b></h4>
            </th>
            <th>
                <h4><b>@Html.DisplayNameFor(model => model.College.CollegeName)</b></h4>
            </th>
            <th>
                <h4><b>@Html.DisplayNameFor(model => model.Name)</b></h4>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.College.CollegeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    </div>