@model IEnumerable<PurchaseReqV3.Models.Address>
<div style = "background-color: gainsboro; opacity: 0.9">


@{
    ViewBag.Title = "Index";
}

<style>
    tr:nth-child(even) {
        background-color: gainsboro;
    }

    tr:nth-child(odd) {
        background-color: lightsteelblue;
    }
</style>

<h1>Addresses in the Purchase Requisition System</h1>

<p>
    <h4>@Html.ActionLink("Create New", "Create")</h4>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Street)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<input type="button" value="Go back to Campus creation" onclick='window.location = "@Url.Action("Create", "Campus")";' />
<input type="button" value="Go back to Vendor creation" onclick='window.location = "@Url.Action("Create", "Vendors")";' />
</div>